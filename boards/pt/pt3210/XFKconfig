if PLATFORM_PT3210
menu "pt3210 Configuration"
    comment "pt3210 Configuration"

    # 主频配置
    choice SYSTEM_CLOCK
        prompt "system clock"
        default SYSTEM_CLOCK_16M
        help
            Select System Clock.
        config SYSTEM_CLOCK_16M
            bool 
            prompt "16Mhz"
        config SYSTEM_CLOCK_32M
            bool
            prompt "32Mhz"
        config SYSTEM_CLOCK_64M
            bool
            prompt "64Mhz"
    endchoice

    config SYS_CLK
        int
        default 16000000 if SYSTEM_CLOCK_16M
        default 32000000 if SYSTEM_CLOCK_32M
        default 64000000 if SYSTEM_CLOCK_64M

    # 芯片封装
    choice CHIP_MODEL
        prompt "chip mdoel"
        default CHIP_MODEL_HQ7
        help
            Select Chip Model.
        config CHIP_MODEL_HQ7
            bool 
            prompt "256K, QFN32"
        config CHIP_MODEL_IQ8
            bool 
            prompt "512K, QFN48"
    endchoice

menu "debug log"
    # debug 日志选项配置
    config PORT_LOG_ENABLE
        bool "debug log enable"
        default y

    choice PORT_LOG_UART_BAUDRATE
        depends on PORT_LOG_ENABLE
        prompt "uart baudrate"
        default PORT_LOG_UART_BAUD_921600
        help
            Select Uart Debug Baudrate.
        config PORT_LOG_UART_BAUD_9600
            bool 
            prompt "9600"
        config PORT_LOG_UART_BAUD_115200
            bool 
            prompt "115200"
        config PORT_LOG_UART_BAUD_256000
            bool
            prompt "256000"
        config PORT_LOG_UART_BAUD_460800
            bool
            prompt "460800"
        config PORT_LOG_UART_BAUD_921600
            bool
            prompt "921600"
    endchoice

    choice PORT_LOG_UART_PORT
        depends on PORT_LOG_ENABLE
        prompt "uart port"
        default PORT_LOG_UART_PORT0
        help
            Select Uart Debug Port.
        config PORT_LOG_UART_PORT0
            bool 
            prompt "UART1"
        config PORT_LOG_UART_PORT1
            bool
            prompt "UART2"
        config PORT_LOG_UART_PORT2
            bool
            prompt "SUART1"
    endchoice

    config PORT_LOG_UART_TX_PIN
        depends on PORT_LOG_ENABLE
        # range 2 18
        int "uart tx pin"
        default 5

    config PORT_LOG_UART_RX_PIN
        depends on PORT_LOG_ENABLE
        # range 2 18
        int "uart rx pin"
        default 6
endmenu

menu "peripheral"
    comment "Required 'public components -> xf_hal -> xxx'"

if !XF_HAL_GPIO_ENABLE
    comment "GPIO"
endif

if !XF_HAL_UART_ENABLE
    comment "UART"
endif
if XF_HAL_UART_ENABLE
    orsource "$(XF_TARGET_PATH)/config/uart.XFKconfig"
endif

if !XF_HAL_SPI_ENABLE
    comment "SPI"
endif
if XF_HAL_SPI_ENABLE
    orsource "$(XF_TARGET_PATH)/config/spi.XFKconfig"
endif

endmenu # peripheral

# menu "freertos"
    config PORT_USE_FREERTOS
        bool "use freertos"
        default n

if PORT_USE_FREERTOS
    config PORT_FREERTOS_XF_TASK_STACK_SIZE
        int "freertos xfusion task stack size (uint32_t)"
        default 256
        range 32 1024
# orsource "$(XF_TARGET_PATH)/freertos.XFKconfig" # IDF
endif # if PORT_USE_FREERTOS

# endmenu

endmenu # port
endif # if PLATFORM_PT3210

